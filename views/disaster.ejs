<% layout('layout/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/fbutton.css">
<style>

    .card-body{
        background-color: darkblue;
        color: white;
    }
    .zero{
        margin-top:260px;
    }
    .zero p{
        color: darkblue;
        font-size: 20px;
    }
    .zero i{
        font-size: 50px;
    }
</style>
<% if(disaster.length==0){ %>
    <div class="row zero">
        <div class="col-lg-10 offset-1 text-center">
            <i class="fa-regular fa-face-laugh-beam"></i>
            <p>There is no calamities..!</p>
            <p>Be ready for next one..</p>
        </div>
    </div>
    <% } %>  
<div class="container my-5">
    <div class="row">
        <% for(let d of disaster){ %>
            <div class="col-sm-12 com-md-6 col-lg-6 box">
                        <div class="card shadow">
                            <div class="card-body">
                                    <p>Disaster location : <%=d.location%></p>
                                    <p>Assemble location : <%= d.assemble%> </p>
                                    <p>Min no of person required : <%= d.persons  %> </p>
                                    <p><%=d.message%></p>
                                    <p class="font-monospace mt-2">No of appliers : <%=d.appliers.length%></p>
                                    <a href="/calamity/<%=d._id%>" class="btn btn-light">View </a>
                                    
                            </div>
                        </div>
            </div>
            <% } %> 
    </div>
</div>


<a href="/calamity/new" class="float">
    <i class="fa fa-plus my-float" ></i>
</a>