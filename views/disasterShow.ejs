<% layout('layout/boilerplate')%>
<style>
    body{
        background-color: #7DB0D0;
    }
  p{
      font-size:18px;
  }
  .list-group-item{
      font-size: 18px;
  }
  #myInput{
      font-size: 20px;
  }
  #copy{
      font-size: 20px;
  }
</style>
<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="text-center">Disaster location : <%=disaster.location%></h4>
                    <hr>
                        <p><%=disaster.message%></p>
                        
                        <h4 class="text-center">Assemble location : <%=disaster.assemble%></h4>
                        <hr>
                        <ul class="list-group">
                            <li class="list-group-item">Minimum number of persons required : <%=disaster.persons%></li>
                            <list class="list-group-item">POSTED ON : <%=disaster.date%></list>
                            <list class="list-group-item">NO OF DAYS:<%=disaster.days%></list>
                            <list class="list-group-item">Aplliers:No of appliers : <%=disaster.appliers.length%></list>

                        </ul>
                     
                        <% if(currentUser._id=='6234bc268b75984e44d02d9e'||currentUser.ano) { %>
                         
                            <div class="row my-3">
                                <p class="text-center">COPY THIS LINK</p>
                                      <div class="col-md-6 mt-1">
                                 <input id="myInput" class="form-control" type="text" value="calamity\<%=disaster._id%>" read only>  
                                    </div>
                                <div class="col-md-1 mt-1 d-grid gap-2">
                                    <button id="copy" onclick="myFunction()" class="btn btn-secondary"><i class="fa-solid fa-copy"></i></button>
                      
                                </div>
                                <div class="col-md-5 mt-1 d-grid gap-2">
                                 <a href="/admin" class="btn btn-secondary">SEND MESSAGE </a>
                             </div>
                              </div>
                           <div class="row">
                               <div class="col-md-4 mt-2">

                                <form class="d-inline" action="/calamity/<%=disaster._id%>?_method=DELETE" method="POST">
                                    <div class="d-grid gap-2">
                                    <button class="btn btn-danger ">Delete</button>
                                </div>
                                </form>
                               </div>
                               <div class="col-md-4 mt-2">
                                   <div class="d-grid gap-2">
                                    <a href="/view/<%=disaster._id%>" class="btn btn-success ">View appliers</a>
                                  </div>
                                
                               </div>
                               <% }%>
                            <div class="col-md-4 mt-2">
                                <div class="d-grid gap-2">
                                    <a href="/apply/<%=disaster._id%>" class="btn btn-info p-1">JOIN TO HELP</a>
                                </div>
                            </div>
                           </div>
                            
                          
                        </div>
                       
                               
                       
                </div>
            </div>
        </div>
    </div>
    
</div>
<script>
    function myFunction() {
  /* Get the text field */
  var copyText = document.getElementById("myInput");

  /* Select the text field */
  copyText.select();
  copyText.setSelectionRange(0, 99999); /* For mobile devices */

   /* Copy the text inside the text field */
  navigator.clipboard.writeText(copyText.value);

  /* Alert the copied text */
  alert("Copied the text: " + copyText.value);
}
</script>