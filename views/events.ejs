<% layout('layout/boilerplate')%>
<style>
    .a{
        color:darkblue !important;
    }
    .box{
    box-shadow: 5px 5px 5px darkblue 5px;
        }
</style>
<link rel="stylesheet" href="/stylesheets/card.css">
<link rel="stylesheet" href="/stylesheets/fbutton.css">
<div class="container mt-2">
    <div class="team-boxed ">
        
        <div class="row people d-flex justify-content-center ">
           
            <% for(let e of events) {%>
                <div class=" col-sm-12 col-md-6 col-lg-4 item">
                    <div class="box animate__animated animate__zoomIn"><img class="rounded-circle" src="<%=e.image%>" style="height: 140px;">
                        <h3 class="name"><%=e.title%></h3>
                        <p class="title"><%=e.location %></p>
                        <p class="description" style="height: 110px;"><%=e.desc.substring(0,200) %>...</p>
                        <a href="/events/<%=e._id%>" class="a">VIEW <%=e.title%></a>
            </div>
            </div>
            <%}%>
    </div>
    </div>
</div>
<a href="/events/new" class="float">
    <i class="fa fa-plus my-float" ></i>
</a>