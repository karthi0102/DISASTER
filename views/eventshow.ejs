<% layout('layout/boilerplate')%>
<style>
    body{
        background-color: #7DB0D0;
    }
     #map {
    width: 100%;
    height: 450px;
    border: 3px solid darkblue;
    }
    img{
    border-radius: 10px;
    transition: 500ms;
    }
    .span{
    font-size: 22px;
    }
</style>

<div class="container my-3">
    <div class="row">
            <div class="col-dm-12 col-lg-6 order-lg-1 order-2   mb-5">
                <img src="<%=event.image%>" class="img" height="450px" width="100%" alt="">
            </div>
            <div class="col-md-12 col-lg-6 order-1 order-lg-2 mb-5">
                <div id='map' >
                </div>
            </div>
    </div>
    <div class="row my-2">
        <div class="col-sm-12 col-md-6 offset-md-3">
                <h3 class=" display-4 text-center"><%=event.title%></h3>
                <h5 class="text-center display-6 text-muted mt-1"><%=event.location%></h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-md-3">
                <div class="card shadow">
                    <div class="card-body">
                            <p class="lead"><%= event.desc %></p>
                            <p class="span"> Days: <%=event.start%> to <%=event.end%></p>
                            <p class="span">  Contact: <%=event.phone%></p>
                            <div class="row">
                                <div class="col-6 d-grid gap-2">
                                    <a href="/events/<%=event._id%>/edit" class="btn btn-info p-2">Edit</a>.
                                </div>
                                <div class="col-6">
                                    <form class="d-inline" action="/events/<%=event._id%>?_method=DELETE" method="POST">
                                        <div class="d-grid gap-2">
                                        <button class="btn btn-danger p-2">Delete</button>
                                    </div>
                                    </form>
                                </div>
                            </div>
                            
                            
                    </div>
                </div>
        </div>
    </div>
</div>

<script>
