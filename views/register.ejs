<script src="/javascripts/data.js"></script>

<script>
    let datas= <%- JSON.stringify( data)%>;
    const college = document.querySelector('#college')
    const select = document.querySelector('#College')
    let filteredData=[]
    college.addEventListener('input',(e)=>{
        let value=e.target.value
        filteredData = datas.filter((t)=> {
            if(t.toLowerCase().startsWith(value.toLowerCase())) {
                return true
            }

        })
      select.innerHTML += filteredData.map((e)=>{
            return `<option value="${e}"> </option>`;
      })
    })

</script>

